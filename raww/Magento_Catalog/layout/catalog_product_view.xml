<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <body>
        <referenceContainer name="product.attributes" remove="true"/>
        <referenceContainer name="product.info.stock.sku" remove="true"/>
        <!-- <referenceBlock name="product.info.review" remove="true"/> -->
        <referenceContainer name="product.info.social" remove="true"/>
        <referenceBlock name="product.info.description" remove="true"/>
        <move element="product.info.overview" destination="product.info.price" after="-"/>
        <!-- <referenceBlock name="reviews.tab" remove="true"/> -->
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <referenceBlock name="product.info.details">
                <block class="Magento\Catalog\Block\Product\View" name="details" template="Magento_Catalog::product/view/details_tab.phtml" group="detailed_info">
                    <arguments>
                        <argument name="title" translate="true" xsi:type="string">details</argument>
                        <argument name="sort_order" xsi:type="string">1</argument>
                    </arguments>
                </block>
               <block class="Magento\Catalog\Block\Product\View" name="how  to" template="Magento_Catalog::product/view/how-to_tab.phtml" group="detailed_info">
                    <arguments>
                        <argument name="title" translate="true" xsi:type="string">how to</argument>
                        <argument name="sort_order" xsi:type="string">2</argument>
                    </arguments>
                </block>
                <block class="Magento\Catalog\Block\Product\View" name="ingredients" template="Magento_Catalog::product/view/ingredients_tab.phtml" group="detailed_info">
                    <arguments>
                        <argument name="title" translate="true" xsi:type="string">ingredients</argument>
                        <argument name="sort_order" xsi:type="string">3</argument>
                    </arguments>
                </block>
                <block class="Magento\Catalog\Block\Product\View" name="faq" template="Magento_Catalog::product/view/faq_tab.phtml" group="detailed_info">
                    <arguments>
                        <argument name="title" translate="true" xsi:type="string">FAQ</argument>
                        <argument name="sort_order" xsi:type="string">4</argument>
                    </arguments>
                </block>
                
        </referenceBlock>  
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="Naturally_smells_like" after="-" template="Magento_Catalog::naturally-smells-like.phtml"/>
        </referenceContainer> 
        <referenceContainer name="content.aside">
        <block class="Magento\Catalog\Block\Product\View" name="what_are_superfoods" before="-" template="Magento_Catalog::what-are-superfoods.phtml"/>
        </referenceContainer> 
        <referenceBlock name="related.product.addto.compare" remove="true"/>
        <referenceBlock name="related.product.addto.wishlist" remove="true"/>
    </body>
</page>
